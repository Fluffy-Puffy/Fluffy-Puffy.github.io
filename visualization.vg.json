{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 450,
  "title": {
    "text": "Earthquakes of magnitude 4 or large between 4 Oct 2020 and 10 Oct 2020",
    "frame": "group"
  },
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/2_symbol_map/data/earthquake.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "geojson",
          "fields": ["longitude", "latitude"],
          "signal": "layer_1_geojson_0"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"],
          "as": ["layer_1_x", "layer_1_y"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"depth\"]) && isFinite(+datum[\"depth\"]) && isValid(datum[\"mag\"]) && isFinite(+datum[\"mag\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "[data('source_0'), layer_1_geojson_0]"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightgray"},
          "stroke": {"value": "white"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "tooltip": {"signal": "datum"},
          "fill": {"scale": "color", "field": "depth"},
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"longitude: \" + (format(datum[\"longitude\"], \"\")) + \"; latitude: \" + (format(datum[\"latitude\"], \"\")) + \"; Depth in km: \" + (format(datum[\"depth\"], \"\")) + \"; Magnitude (Richter scale): \" + (format(datum[\"mag\"], \"\"))"
          },
          "x": {"field": "layer_1_x"},
          "y": {"field": "layer_1_y"},
          "size": {"scale": "size", "field": "mag"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_1", "field": "depth"},
      "range": {"scheme": "reds"},
      "interpolate": "hcl",
      "zero": false
    },
    {
      "name": "size",
      "type": "linear",
      "domain": [4, 8],
      "range": [9, 361],
      "zero": false
    }
  ],
  "legends": [
    {
      "title": "Depth in km",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "encode": {"gradient": {"update": {"opacity": {"value": 0.7}}}}
    },
    {
      "title": "Magnitude (Richter scale)",
      "size": "size",
      "symbolType": "circle",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.7},
            "opacity": {"value": 0.7},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}